{
  "name": "hono-starter",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/main.ts",
    "start": "bun run src/main.ts",
    "check": "tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate --config=src/core/database/drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config=src/core/database/drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config=src/core/database/drizzle.config.ts",
    "db:studio": "bunx drizzle-kit studio --config=src/core/database/drizzle.config.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier \"src/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" --check"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "inversify": "^7.10.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@hono/eslint-config": "^2.0.3",
    "@types/pg": "^8.15.5",
    "bun-types": "^1.2.22",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
